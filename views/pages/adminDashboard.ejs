<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') %>
<title><%= title %></title>

<body>

    <%- include('../partials/navbar.ejs') %>


    <div class="container mt-5">
        <h3>Wellcome to your Dashboard <%= firstName %></h3>
        <div class="form-group">
            <form action="/uploadAvatar" method="post" enctype="multipart/form-data">
                <img class="avatar" src="/images/<%= avatar %>" alt="avatar">
                <input type="file" name="avatar" class="form-control-file avatar-input" id="exampleInputFile"
                    aria-describedby="fileHelp">
                <small id="fileHelp" class="form-text text-muted">Plaese select your desired avatar.</small>
                <input type="submit" value="Upload avatar" class="btn btn-success submit-avatar">
            </form>
        </div>
        <%- include('../partials/messages.ejs') %>
        <table class="table table-hover">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-active">
                    <th scope="row">First Name</th>
                    <td><%= firstName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Last Name</th>
                    <td><%= lastName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">User Name</th>
                    <td><%= userName %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Gender</th>
                    <td><%= gender %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Phone Number</th>
                    <td><%= phoneNumber %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Date Joined</th>
                    <td><%= createdAt %></td>
                </tr>
                <tr class="table-active">
                    <th scope="row">Bio</th>
                    <td><%= bio %></td>
                </tr>
                <td>
                    <a href="/dashboard/edit" type="button" class="btn btn-success">Edit</a>
                    <a href="/dashboard/edit" type="button" class="btn btn-success">Change Password</a>
                    <a href="/users/logout" type="button" class="btn btn-danger">Log Out</a>
                </td>
                <td></td>
            </tbody>
        </table>
        <a href="/dashboard/article" type="button" class="btn btn-primary btn-lg">New Article</a>
        <a href="/user/articles" type="button" class="btn btn-primary btn-lg">Your Articles</a>
        <a href="/all/Earticles" type="button" class="btn btn-primary btn-lg">All Articles</a>
    </div>

    <%- include('../partials/scripts.ejs') %>

</body>

</html>